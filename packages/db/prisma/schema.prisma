

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DocFileType {
  PDF
  PNG
  JPEG
}

model Documents{
  id          String        @id   @default(uuid())
  usedId      String
  fileName    String
  fileType    DocFileType
  filePath    String
  uploadedAt  DateTime      @default(now())
  processed   Boolean       @default(false)
  chunks      ContentChunk[]
}

model Links {
  id          String        @id @default(uuid())
  usedId      String
  url         String
  title       String?
  description String?
  addedAt     DateTime      @default(now())

}

model ContentChunk {
  id          String @id @default(uuid())
  documentId  String
  document    Documents @relation(fields: [documentId], references: [id])
  chunkText   String
  chunkIndex  Int
  createdAt   DateTime @default(now())
  pinecodeId  String?
}