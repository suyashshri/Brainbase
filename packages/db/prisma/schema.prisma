generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DocFileType {
  PDF
  PNG
  JPEG
}

enum userSystemEnum {
  system
  user
}

model Documents {
  id         String         @id @default(uuid())
  userId     String
  fileName   String
  fileType   String
  fileUrl    String
  fileKey    String
  uploadedAt DateTime       @default(now())
  processed  Boolean        @default(true)
  chunks     ContentChunk[]
  messages   PdfMessages[]
}

model Links {
  id          String   @id @default(uuid())
  usedId      String
  url         String
  title       String?
  description String?
  addedAt     DateTime @default(now())
}

model PdfMessages {
  id       String         @id @default(uuid())
  docId    String
  document Documents      @relation(fields: [docId], references: [id])
  content  String
  createAt DateTime       @default(now())
  role     userSystemEnum
}

model ContentChunk {
  id         String    @id @default(uuid())
  documentId String
  document   Documents @relation(fields: [documentId], references: [id])
  chunkText  String
  chunkIndex Int
  createdAt  DateTime  @default(now())
  pinecodeId String?
}
